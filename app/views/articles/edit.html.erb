<h1>Edit article</h1>


<% if @article.errors.any? %>
<h2>Following errors prevented from article from being updated !</h2>
<ul>
	<% @article.errors.full_messages.each do |err| %>
	<li><%= err%></li>
<% end %>
</ul>
<% end %>

<%= form_with(model: @article, local: true) do |f|%>
<p>
	<%= f.label :title %> 
	<br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :description %>
	<br>
	<%= f.text_area :description %>
</p>

<p>
	<%= f.submit %>

</p>
<% end %>